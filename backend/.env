# FastAPI Configuration
DEBUG=True
ENVIRONMENT=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/news_db
# For development with SQLite instead, uncomment:
# DATABASE_URL=sqlite:///./news_db.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=500

# News API Configuration
NEWS_API_KEY=your-newsapi-org-key-here
NEWS_API_BASE_URL=https://newsapi.org/v2

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Configuration
API_KEY=mobile-app-key-123
API_TITLE=AI News Intelligence API
API_VERSION=1.0.0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database
VECTOR_DB_PATH=./vector_db
SIMILARITY_THRESHOLD=0.7

# Text Processing
CHUNK_SIZE=400
CHUNK_OVERLAP=50

# Optional: Local LLM Configuration (for running without OpenAI)
USE_LOCAL_LLM=False
LOCAL_LLM_MODEL=llama-2-7b-chat
